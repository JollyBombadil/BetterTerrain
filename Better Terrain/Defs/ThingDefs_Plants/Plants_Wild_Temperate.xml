  <!--============================ Wild - Trees ============================-->

  <ThingDef ParentName="BT_TreeBase">
    <defName>BT_TreeOak</defName>
    <label>oak tree</label>
    <description>A strong hardwood tree. Slow-going, but its wood is very strong.</description>
    <graphicData>
      <texPath>BT/Tree/TreeOak</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>5</Beauty>
    </statBases>
    <plant>
		<sowTags>
			<li>/Soil</li>
			<li>Clump</li>
		</sowTags>
		<visualSizeRange>
			<min>2.0</min>
			<max>3.0</max>
		</visualSizeRange>
		<growDays>30</growDays>
		<leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath>
      <harvestWork>1000</harvestWork>
      <harvestYield>50</harvestYield>
    </plant>
  </ThingDef>

